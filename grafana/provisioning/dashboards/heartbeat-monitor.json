                    "editorMode": "code",
                    "format": "table",
                    "rawQuery": true,
                    "rawSql": "SELECT date_trunc('second', recorded_at) AS time, ROUND(AVG(heart_rate)::numeric, 1) AS \"heart_rate\" FROM heartbeat_readings WHERE $__timeFilter(recorded_at) GROUP BY 1 ORDER BY 1;",

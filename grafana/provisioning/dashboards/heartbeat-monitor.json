        {
            "datasource": {
                "type": "postgres",
                "uid": "heartbeat-postgres"
            },
            "description": "Percentage of all readings that were flagged as anomalous. Thresholds: Green < 5%, Yellow 5-10%, Orange 10-20%, Red > 20%.",
            "gridPos": {
                "h": 5,
                "w": 4,
                "x": 12,
                "y": 1
            },
            "id": 4,
            "title": "Anomaly Rate",
            "type": "gauge",
            "targets": [
                {
                    "datasource": {
                        "type": "postgres",
                        "uid": "heartbeat-postgres"
                    },
                    "editorMode": "code",
                    "format": "table",
                    "rawQuery": true,
                    "rawSql": "SELECT ROUND(100.0 * SUM(CASE WHEN is_anomaly THEN 1 ELSE 0 END) / NULLIF(COUNT(*), 0), 1) AS \"Anomaly Rate\" FROM heartbeat_readings WHERE $__timeFilter(recorded_at);",
                    "refId": "A"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "color": {
                        "mode": "thresholds"
                    },
                    "min": 0,
                    "max": 100,
                    "unit": "percent",
                    "noValue": "0%",
                    "thresholds": {
                        "mode": "absolute",
                        "steps": [
                            {
                                "color": "green",
                                "value": null
                            },
                            {
                                "color": "yellow",
                                "value": 5
                            },
                            {
                                "color": "orange",
                                "value": 10
                            },
                            {
                                "color": "red",
                                "value": 20
                            }
                        ]
                    }
                },
                "overrides": []
            },
            "options": {
                "showThresholdLabels": true,
                "showThresholdMarkers": true
            }
        },
